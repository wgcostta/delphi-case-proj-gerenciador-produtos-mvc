  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.FMTBcd, Data.DB, Data.SqlExpr,
  SQLTimSt,

  RLReport, DM_CONEXAO, Vcl.StdCtrls, Vcl.Mask, DM_GERAL_SQLS, Vcl.ExtCtrls;

type
  TFRM_REL_PRODUTOS = class(TForm)
    RLReport1: TRLReport;
    DS_REL_PRODUTOS: TDataSource;
    SQL_REL_PRODUTOS: TSQLQuery;
    RLBand2: TRLBand;
    RLLabel1: TRLLabel;
    RLGroup1: TRLGroup;
    RLLabel2: TRLLabel;
    RLDBText1: TRLDBText;
    RLLabel5: TRLLabel;
    RLDBText4: TRLDBText;
    RLDBText5: TRLDBText;
    RLLabel6: TRLLabel;
    RLLabel7: TRLLabel;
    RLDBText6: TRLDBText;
    RLBand4: TRLBand;
    RLLabel3: TRLLabel;
    RLDBText9: TRLDBText;
    RLBand1: TRLBand;
    RLSystemInfo1: TRLSystemInfo;
    RLDBText2: TRLDBText;
    RLLabel4: TRLLabel;
    RLLabel8: TRLLabel;
    Button1: TButton;
    edtPrecoMax: TEdit;
    MaskEdit1: TMaskEdit;
    edtMaskDataIni: TMaskEdit;
    edtMaskDataFim: TMaskEdit;
    Label1: TLabel;
    Label2: TLabel;
    Panel1: TPanel;
    Panel2: TPanel;
    Label3: TLabel;
