    //RLReport1.Caption :=  edtPrecoMax.text;// DateToStr( dateTimePicker1.date );
    // RLReport1.Caption := DateToStr( dateTimePicker2.date );
    //RLReport1.Prepare;
    RLReport1.Preview()
end;

procedure TFRM_REL_PRODUTOS.Preencher;
var
  sErro: String;
begin
   if edtPrecoMax.Text = EmptyStr then
  begin
    ShowMessage('Informe o valor maximo!');
    Exit;
  end;

   SQL_REL_PRODUTOS.close;
   SQL_REL_PRODUTOS.sql.add(Format(sSQLGeral, [edtPrecoMax.Text ]));
   SQL_REL_PRODUTOS.open;

end;

end.
